    <attr name="font">
        <enum name="Roboto_Bold" value="0" />
        <enum name="Roboto_Medium" value="1" />
        <enum name="Roboto_Regular" value="2" />
        <enum name="Roboto_Light" value="3" />
        <enum name="Roboto_Think" value="4" />
